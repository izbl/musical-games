<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customLabelStyle">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="customInputElementStyle">
        <item name="android:background">@drawable/item_bordered</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="customInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="basicListButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/textFillColor</item>
        <item name="android:background">@drawable/button_basic</item>
    </style>
</resources>