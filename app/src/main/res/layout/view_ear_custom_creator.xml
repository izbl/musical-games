<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Name Note Group -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Name" />

                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter level name"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Description Note Group -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Description" />

                <EditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter description"
                    android:inputType="text" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bordered"
                android:padding="4dp">

                <TableRow
                    android:id="@+id/len_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/len"
                        style="@style/customLabelStyle"
                        android:text="Melody length:" />

                    <EditText
                        android:id="@+id/edit_len"
                        style="@style/customInputElementStyle"
                        android:inputType="number"
                        android:maxLength="2" />

                </TableRow>

                <TableRow
                    android:id="@+id/root_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rootNoteLabel"
                        style="@style/customLabelStyle"
                        android:text="Root Note:" />

                    <Spinner
                        android:id="@+id/root_spinner"
                        style="@style/customInputElementStyle" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <TextView
                        style="@style/customLabelStyle"
                        android:text="Notes from:"
                        />

                    <ToggleButton
                        android:id="@+id/isSelectionToggle"
                        style="@style/customInputElementStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ToggleButton"
                        android:textOff="Scale"
                        android:textOn="Selection" />.
                </TableRow>

                <TableRow
                    android:id="@+id/scale_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/scaleLabel"
                        style="@style/customLabelStyle"
                        android:text="Scale:" />

                    <Spinner
                        android:id="@+id/scaleSpinner"
                        style="@style/customInputElementStyle" />
                </TableRow>
                <TableRow
                    android:id="@+id/custom_notes_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        style="@style/customLabelStyle"
                        android:text="Selection:"/>
                    <FrameLayout
                        android:padding="2dp"
                        android:id="@+id/keyboard_container"
                        android:clickable="true"
                        android:focusable="true"
                        style="@style/customInputElementStyle">
                        <com.example.musicalgames.components.keyboard.KeyboardView
                            android:clickable="false"
                            android:focusable="false"
                            android:enabled="false"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:id="@+id/keyboard_preview"
                        />
                    </FrameLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/max_interval_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/maxIntervalLabel"
                        style="@style/customLabelStyle"
                        android:text="Max Interval:" />

                    <Spinner
                        android:id="@+id/max_interval_spinner"
                        style="@style/customInputElementStyle" />
                </TableRow>

                <TableRow
                    android:id="@+id/min_note_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/minSoundLabel"
                        style="@style/customLabelStyle"

                        android:text="Min Sound:" />

                    <TableRow style="@style/customInputStyle">

                        <Spinner
                            android:id="@+id/min_note_spinner"
                            style="@style/customInputElementStyle" />

                        <Spinner
                            android:id="@+id/min_note_octave"
                            style="@style/customInputElementStyle" />
                    </TableRow>

                </TableRow>

                <TableRow
                    android:id="@+id/max_note_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/maxSoundLabel"
                        style="@style/customLabelStyle"
                        android:text="Max Sound:" />

                    <TableRow style="@style/customInputStyle">

                        <Spinner
                            android:id="@+id/max_note_spinner"
                            style="@style/customInputElementStyle" />

                        <Spinner
                            android:id="@+id/max_octave_spinner"
                            style="@style/customInputElementStyle" />
                    </TableRow>
                </TableRow>
            </TableLayout>


            <!-- Submit Button -->

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/scrollView3"
        app:layout_constraintBottom_toBottomOf="parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="?attr/colorOnPrimary"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            style="@style/basicListButtonStyle"
            android:text="Save"
            />
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="?attr/colorOnPrimary"/>
        <Button
            android:id="@+id/playButton"
            style="@style/basicListButtonStyle"
            android:text="Play"
            />
       </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>